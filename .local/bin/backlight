#!/bin/sh

# Prints the current brightness

case $BLOCK_BUTTON in
    1) xbacklight -inc 10;;
    2) xbacklight -dec 10;;
    3) notify-send "ðŸ’¡ Brightness module" "\- Shows current brightness.
- Scroll up to increase brightness.
- Scroll down to decrease brightness." ;;
    6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

brightness="$(light -G)"
brightness="${brightness%.*}"

case 1 in
    $((brightness >= 70)) ) icon="ðŸŒ•" ;;
    $((brightness >= 30)) ) icon="ðŸŒ—" ;;
    $((brightness >= 1)) ) icon="ðŸŒ˜" ;;
    * ) echo "ðŸŒ‘" && exit ;;
esac

echo "$icon $brightness%"
