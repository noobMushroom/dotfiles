#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;;
	2) amixer -D pulse set Master toggle ;;
	4) amixer -D pulse set Master 5%+ unmute ;;
	5) amixer -D pulse set Master 5%- unmute ;;
	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

vol=$(amixer get Master | grep -o -E '[0-9]+%' | head -1)
muted=$(amixer get Master | grep -o -E 'off|mute')

# If muted, print ðŸ”‡ and exit.
if [ "$muted" == "off" ] || [ "$muted" == "mute" ]; then
    echo ðŸ”‡
    exit
fi

vol="${vol%%\%}"

case 1 in
	$((vol >= 70)) ) icon="ðŸ”Š" ;;
	$((vol >= 30)) ) icon="ðŸ”‰" ;;
	$((vol >= 1)) ) icon="ðŸ”ˆ" ;;
	* ) echo ðŸ”‡ && exit ;;
esac

echo "$icon$vol%"
