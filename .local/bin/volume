#!/bin/sh

vol=$(pamixer --get-volume)
muted=$(pamixer --get-mute)

# If muted, print ðŸ”‡ and exit.
if [ "$muted" == "true" ] ; then
    echo ðŸ”‡
    exit
fi

case 1 in
	$((vol >= 70)) ) icon="ðŸ”Š" ;;
	$((vol >= 30)) ) icon="ðŸ”‰" ;;
	$((vol >= 1)) ) icon="ðŸ”ˆ" ;;
	* ) echo ðŸ”‡ && exit ;;
esac

printf "%s%s\n" $icon$vol%
